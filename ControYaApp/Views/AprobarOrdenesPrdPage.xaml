<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControYaApp.Views.AprobarOrdenesPrdPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ControYaApp.Models"
    xmlns:viewModels="clr-namespace:ControYaApp.ViewModels"
    Title="AprobarOrdenesPrdPage"
    x:DataType="viewModels:AprobarOrdenesPrdViewModel">
    <VerticalStackLayout>
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            Text="Welcome to AprobarOrdenesPrdPage!"
            VerticalOptions="Center" />

        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,*">

            <Label Text="Aprobar PT" />
            <Label Grid.Column="1" Text="Aprobar MP" />
            <CollectionView Grid.Row="1" ItemsSource="{Binding UnpprPtNotificadosPrd}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PtNotificado">
                        <VerticalStackLayout>

                            <Label FontSize="18">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding CodigoProduccion}" />
                                        <Span Text="{Binding Orden}" />
                                        <Span Text="{Binding Producto}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Grid.Row="1" Text="{Binding Fecha, StringFormat='Fecha: {0}'}" />
                            <Label Grid.Row="2" Text="{Binding NombreEmpleado, StringFormat='Por: {0}'}" />
                            <Label Grid.Row="3" Text="{Binding Notificado, StringFormat='{0} x.'}" />
                            <Label Grid.Row="4" Text="{Binding Serie, StringFormat='Serie'}" />

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <CollectionView
                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding UnpprMpNotificadosPrd}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PtNotificado">
                        <VerticalStackLayout>

                            <Label FontSize="18">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding CodigoProduccion}" />
                                        <Span Text="{Binding Orden}" />
                                        <Span Text="{Binding Producto}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Grid.Row="1" Text="{Binding Fecha, StringFormat='Fecha: {0}'}" />
                            <Label Grid.Row="2" Text="{Binding NombreEmpleado, StringFormat='Por: {0}'}" />
                            <Label Grid.Row="3" Text="{Binding Notificado, StringFormat='{0} x.'}" />
                            <Label Grid.Row="4" Text="{Binding Serie, StringFormat='Serie'}" />

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </VerticalStackLayout>
</ContentPage>