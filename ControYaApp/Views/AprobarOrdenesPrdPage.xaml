<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControYaApp.Views.AprobarOrdenesPrdPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:models="clr-namespace:ControYaApp.Models"
    xmlns:viewModels="clr-namespace:ControYaApp.ViewModels"
    Title="AprobarOrdenesPrdPage"
    x:DataType="viewModels:AprobarOrdenesPrdViewModel">

    <Grid Padding="10,10,10,0" RowDefinitions="Auto,*">

        <HorizontalStackLayout Spacing="10">

            <Button
                x:Name="ImageButton_FlyoutShell"
                Padding="11"
                BackgroundColor="Transparent"
                BorderColor="#0f2b57"
                CornerRadius="5"
                HeightRequest="50"
                ImageSource="{FontImageSource FontFamily=MaterialSharp,
                                              Glyph={x:Static m:MaterialSharp.Menu},
                                              Color=#0f2b57}"
                WidthRequest="50" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Aprobar Órdenes de Producción"
                TextColor="#0f2b57"
                VerticalOptions="Center" />

        </HorizontalStackLayout>

        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*"
            ColumnSpacing="10"
            RowDefinitions="Auto,Auto,Auto,*">

            <Button
                Grid.ColumnSpan="2"
                Command="{Binding ApproveSelectedCommand}"
                HorizontalOptions="Center"
                Text="Aprobar selección" />

            <Label Grid.Row="1" Text="Aprobar PT" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="Aprobar MP" />

            <Button
                Grid.Row="2"
                Command="{Binding SelectAllPtCommand}"
                CornerRadius="3"
                HorizontalOptions="Center"
                Text="Seleccionar todo PT" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Command="{Binding SelectAllMpCommand}"
                CornerRadius="3"
                HorizontalOptions="Center"
                Text="Seleccionar todo MP" />

            <CollectionView Grid.Row="3" ItemsSource="{Binding UnapprPtNotificadosPrd}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PtNotificado">
                        <Border>

                            <VerticalStackLayout>

                                <Label FontSize="18">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding CodigoProduccion, StringFormat='{0} - '}" />
                                            <Span Text="{Binding Orden, StringFormat='{0} - '}" />
                                            <Span Text="{Binding Producto}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0}'}" />
                                <Label Text="{Binding NombreEmpleado, StringFormat='Por: {0}'}" />
                                <Label Text="{Binding Notificado, StringFormat='{0} x.'}" />
                                <Label Text="{Binding Serie, StringFormat='Serie'}" />
                                <CheckBox IsChecked="{Binding IsSelected}" Color="Green" />

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <CollectionView
                Grid.Row="3"
                Grid.Column="1"
                ItemsSource="{Binding UnapprMpNotificadosPrd}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MpNotificado">
                        <Border>

                            <VerticalStackLayout>

                                <Label FontSize="18">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding CodigoProduccion, StringFormat='{0} - '}" />
                                            <Span Text="{Binding Orden, StringFormat='{0} - '}" />
                                            <Span Text="{Binding Producto}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0}'}" />
                                <Label Text="{Binding NombreEmpleado, StringFormat='Por: {0}'}" />
                                <Label Text="{Binding Notificado, StringFormat='{0} x.'}" />
                                <Label Text="{Binding Serie, StringFormat='Serie'}" />
                                <CheckBox IsChecked="{Binding IsSelected}" Color="Green" />

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </Grid>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="3" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

</ContentPage>