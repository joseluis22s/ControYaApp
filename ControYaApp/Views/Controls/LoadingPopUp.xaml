<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ControYaApp.Views.Controls.LoadingPopUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModel="clr-namespace:ControYaApp.ViewModels.Controls"
    x:DataType="viewModel:LoadingPopUpViewModel"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Shell.PresentationMode="Modal"
    Color="Transparent">

    <Border
        Padding="10,6"
        BackgroundColor="#c7d1e1"
        StrokeShape="{RoundRectangle CornerRadius=15}">
        <VerticalStackLayout Spacing="5">
            <ActivityIndicator IsRunning="True" Color="#0f2b57" />
            <Label
                HorizontalOptions="Center"
                Text="Cargando"
                VerticalOptions="Center" />
        </VerticalStackLayout>
    </Border>

</toolkit:Popup>
