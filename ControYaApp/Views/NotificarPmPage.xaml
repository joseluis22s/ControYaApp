<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControYaApp.Views.NotificarPmPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:model="clr-namespace:ControYaApp.Models"
    xmlns:orientation="clr-namespace:ControYaApp.Services.Orientation"
    xmlns:urui="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:v="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
    xmlns:viewModel="clr-namespace:ControYaApp.ViewModels"
    Title="NotificarPmPage"
    x:DataType="viewModel:NotificarPmViewModel"
    HideSoftInputOnTapped="True"
    Shell.PresentationMode="Modal">

    <Grid
        Padding="10,10,10,0"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="5">

        <Grid
            ColumnDefinitions="*,Auto"
            ColumnSpacing="10"
            RowDefinitions="Auto,Auto,Auto"
            RowSpacing="5">

            <Label
                Padding="0,10,5,0"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Notificar material para producción"
                TextColor="#0f2b57" />

            <Button
                Grid.RowSpan="2"
                Grid.Column="1"
                Padding="5,0"
                BackgroundColor="Transparent"
                Command="{Binding GoBackCommand}"
                CornerRadius="50"
                FontSize="28"
                HorizontalOptions="End"
                Text="×"
                TextColor="#0f2b57"
                VerticalOptions="Start" />

            <Grid
                Grid.Row="1"
                Grid.ColumnSpan="2"
                ColumnDefinitions="*,Auto">

                <Button
                    Command="{Binding NotificarPmCommand}"
                    CornerRadius="3"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Text="Notificar selección" />

                <Button
                    Grid.Column="1"
                    Padding="5"
                    BackgroundColor="#779bba"
                    Command="{Binding FilterOrdenesProduccionMpCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    FontSize="Body"
                    ImageSource="{FontImageSource FontFamily=MaterialSharp,
                                                  Glyph={x:Static m:MaterialSharp.Filter_list},
                                                  Color=#ffffff}"
                    IsVisible="{Binding OrdenesGroupLoaded}"
                    MaximumWidthRequest="200" />
            </Grid>

        </Grid>

        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,2*,*"
            ColumnSpacing="15">

            <urui:DatePickerField
                Title="Fecha"
                AccentColor="#0f2b57"
                AllowClear="False"
                BorderColor="Gray"
                Date="{Binding FechaActual, StringFormat='{0:dd/MM/yyyy}'}"
                MaximumDate="{Binding RangoPeriodos.FechaMax}"
                MinimumDate="{Binding RangoPeriodos.FechaMin}" />

            <urui:InputField
                Title="Empleado"
                Grid.Column="1"
                AccentColor="#0f2b57"
                BorderColor="Gray">
                <Picker
                    Margin="10,0"
                    ItemDisplayBinding="{Binding NombreEmpleado}"
                    ItemsSource="{Binding Empleados}"
                    SelectedItem="{Binding EmpleadoSelected}"
                    VerticalOptions="CenterAndExpand" />
                <urui:InputField.Validations>
                    <v:RequiredValidation />
                </urui:InputField.Validations>
            </urui:InputField>

            <Button
                Grid.Column="2"
                Command="{Binding SeleccionarTodosCommand}"
                CornerRadius="3"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="Seleccionar todos" />

        </Grid>


        <CollectionView
            Grid.Row="2"
            IsGrouped="True"
            ItemsSource="{Binding OrdenesProduccionMaterialGroupSource}"
            SelectionMode="None">

            <CollectionView.GroupFooterTemplate>
                <DataTemplate>

                    <BoxView
                        Margin="0,15"
                        CornerRadius="50"
                        HeightRequest="1"
                        Color="#c4c4c4" />

                </DataTemplate>
            </CollectionView.GroupFooterTemplate>

            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="model:OrdenProduccionMaterialGroup">

                    <Grid
                        Margin="0,5"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="10"
                        RowDefinitions="Auto,Auto">

                        <Border
                            Grid.RowSpan="2"
                            Padding="9,5"
                            BackgroundColor="#181f34"
                            StrokeShape="{RoundRectangle CornerRadius=10}"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="17"
                                Text="{Binding Orden}"
                                TextColor="#ffffff" />
                        </Border>

                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="20"
                            LineBreakMode="WordWrap"
                            Text="{Binding Material}"
                            VerticalTextAlignment="Center" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="17">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontAttributes="Bold" Text="Cod. Material: " />
                                    <Span Text="{Binding CodigoMaterial}" />
                                    <Span FontAttributes="Bold" Text=" - Cod. Producción: " />
                                    <Span Text="{Binding CodigoProduccion}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>


                    </Grid>

                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:OrdenProduccionMp">

                    <Border
                        Margin="4"
                        Padding="20,12"
                        BackgroundColor="#ffffff"
                        Stroke="#ababab"
                        StrokeShape="{RoundRectangle CornerRadius='10'}">

                        <Grid
                            ColumnDefinitions="3*,1.5*,*"
                            ColumnSpacing="10"
                            RowDefinitions="Auto,*">

                            <Label FontSize="17">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontAttributes="Bold" Text="{Binding CodigoProducto, StringFormat='{0}:'}" />
                                        <Span Text="{Binding Producto, StringFormat=' {0}'}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <VerticalStackLayout Grid.Row="1">

                                <Label FontAttributes="Bold" FontSize="17">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontAttributes="Bold" Text="Cod. Material: " />
                                            <Span Text="{Binding CodigoMaterial}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="1" FontSize="17">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Cantidad, StringFormat='x{0}'}" />
                                            <Span Text="{Binding CodigoUnidad, StringFormat='  -  {0}'}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                            </VerticalStackLayout>

                            <Border
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Padding="0,5"
                                BackgroundColor="Beige"
                                Stroke="#0f2b57"
                                StrokeShape="{RoundRectangle CornerRadius='7'}">
                                <Grid
                                    ColumnDefinitions="Auto,Auto"
                                    ColumnSpacing="15"
                                    HorizontalOptions="Center"
                                    RowDefinitions="Auto,Auto">
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Notificado" />
                                    <Label
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Saldo" />
                                    <Entry
                                        Grid.Row="1"
                                        HorizontalTextAlignment="Center"
                                        Keyboard="Numeric"
                                        Text="{Binding Notificado}" />
                                    <Border
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Padding="4"
                                        Stroke="#0f2b57"
                                        StrokeShape="{RoundRectangle CornerRadius='10'}">
                                        <Label Text="{Binding Saldo}" VerticalOptions="Center" />
                                    </Border>
                                </Grid>
                            </Border>

                            <CheckBox
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                HeightRequest="18"
                                IsChecked="{Binding IsSelected}"
                                VerticalOptions="Center" />

                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>


</ContentPage>