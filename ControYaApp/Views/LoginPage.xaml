<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControYaApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:urui="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewModel="clr-namespace:ControYaApp.ViewModels"
    x:DataType="viewModel:LoginViewModel">

    <ScrollView>

        <Grid RowDefinitions="Auto,*" RowSpacing="-60">
            <ImageButton
                Margin="10"
                Command="{Binding GoToConfigCommand}"
                HeightRequest="40"
                HorizontalOptions="End"
                Source="{FontImageSource FontFamily=MaterialSharp,
                                         Glyph={x:Static m:MaterialSharp.Settings},
                                         Color=#091a36}"
                WidthRequest="40" />

            <Grid
                Grid.Row="1"
                Padding="30,0"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                RowSpacing="13"
                VerticalOptions="Center">

                <Image Source="logo_desoteem.png" WidthRequest="130" />

                <Label
                    Grid.Row="1"
                    Margin="0,0,0,3"
                    FontAttributes="Bold"
                    FontSize="29"
                    HorizontalOptions="Center"
                    Text="Iniciar Sesión"
                    TextColor="#0f2b57" />

                <urui:TextField
                    Title="Usuario"
                    Grid.Row="2"
                    Icon="{FontImageSource FontFamily=MaterialSharp,
                                           Glyph={x:Static m:MaterialSharp.Account_circle}}"
                    IsTextPredictionEnabled="False"
                    Text="{Binding Usuario.NombreUsuario}" />

                <urui:TextField
                    Title="Contraseña"
                    Grid.Row="3"
                    Icon="{FontImageSource FontFamily=MaterialSharp,
                                           Glyph={x:Static m:MaterialSharp.Password}}"
                    IsTextPredictionEnabled="False"
                    Text="{Binding Usuario.Contrasena}">
                    <urui:TextField.Attachments>
                        <urui:TextFieldPasswordShowHideAttachment />
                    </urui:TextField.Attachments>
                </urui:TextField>

                <Button
                    Grid.Row="4"
                    Command="{Binding GoToOrdenesCommand}"
                    FontAttributes="Bold"
                    FontSize="15"
                    HeightRequest="37"
                    MaximumWidthRequest="200"
                    Text="Ingresar" />

            </Grid>
        </Grid>
    </ScrollView>

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="urui:TextField">
                <Setter Property="InputBackground" Value="AliceBlue" />
                <Setter Property="AccentColor" Value="#0f2b57" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="FontAutoScalingEnabled" Value="False" />
            </Style>

            <Style TargetType="ImageButton">
                <Setter Property="HeightRequest" Value="35" />
                <Setter Property="WidthRequest" Value="35" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>

        <Color>#8db3d6</Color>

    </ContentPage.Background>

</ContentPage>